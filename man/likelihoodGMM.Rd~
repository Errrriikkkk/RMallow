\name{likelihoodGMM}
\alias{likelihoodGMM}
\title{Calculate the likelihood of a set of data in a GMM using
L(\theta, \pi) = \sum_{i = 1}^N log[\sum_{g = 1}^G p_g*C(\theta_g)exp(-D_{\theta_g}(y_i\circ \pi_g))]}
\usage{
  likelihoodGMM(ps, thetas, ranks)
}
\arguments{
  \item{ps}{Proportion of the data which was drawn from
  each cluster.}

  \item{thetas}{matrix of theta parameters for each
  cluster}

  \item{ranks}{a list of objects of class 'ranking', as
  generated by RMallow, one for each cluster.}
}
\value{
  The log-likelihood of the parameters, given the data.
}
\description{
  Calculate the likelihood of a set of data in a GMM using
  L(\theta, \pi) = \sum_{i = 1}^N log[\sum_{g = 1}^G
  p_g*C(\theta_g)exp(-D_{\theta_g}(y_i\circ \pi_g))]
}

